<h1>Listing articles</h1>
<%= link_to 'Main Page', controller: 'welcome' %><br>
<%= link_to 'New article', new_article_path %>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="3"></th>
	</tr>

	<% @articles.each do |art| %>
		<tr>
			<td><%= art.title %></td>
			<td><%= art.text %></td>
			<td><%= link_to 'Show', article_path(art) %></td>
			<td><%= link_to 'Edit', edit_article_path(art) %></td>
			<td><%= link_to 'Destroy', article_path(art), 
				method: :delete,
				data: { confirm: 'Are you sure?' } %></td>
		</tr>		
	<% end %>
</table>